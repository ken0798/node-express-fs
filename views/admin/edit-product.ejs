<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(!edit){%>add-product<% }else{%>edit-product <% }%>" method="POST">
            <% if(edit) {%>
                <input type="hidden" value="<%= product.id %>" name="productId" />
            <% } %>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= edit && product.title  %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" value="<%if(edit){%><%= product.imageUrl %><%}%>" id="imageUrl">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" value="<%= edit && product.price  %>" id="price" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%=edit && product.description %></textarea>
            </div>

            <button class="btn" type="submit"><%= edit? 'Update ':'Add ' %>Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>